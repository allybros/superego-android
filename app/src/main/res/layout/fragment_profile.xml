<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragmentBackground"
    android:fillViewport="true"
    android:scrollbars="vertical">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/profileSwipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/antiFlashWhite">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/antiFlashWhite">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutProfileContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/antiFlashWhite"
                android:paddingBottom="20dp">



                <!--Renkli kısım-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutProfileTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_profile_top"
                    android:elevation="10dp"
                    android:padding="125dp"
                    android:translationZ="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--Profil Fotografı-->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:padding="5dp"
                    android:translationZ="10dp"
                    android:background="@drawable/shape_circle_imageview"
                    android:elevation="4dp"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintStart_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/constraintLayoutProfileContainer">
                    <com.allybros.superego.ui.CircledNetworkImageView
                        android:id="@+id/user_avatar"
                        android:layout_width="135dp"
                        android:layout_height="135dp"
                        android:src="@drawable/default_avatar" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/btnSettings"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ic_baseline_settings_36"
                    android:translationZ="12dp"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayoutProfileTop"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayoutProfileTop" />


                <!--Profil Card-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="125dp"
                    android:layout_marginEnd="36dp"
                    android:background="@color/transparent"
                    android:elevation="4dp"
                    android:paddingTop="64dp"
                    android:translationZ="7dp"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintStart_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/constraintLayoutProfileContainer">


                    <TextView
                        android:id="@+id/tvUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\@username"
                        android:textColor="@color/White"
                        android:textSize="20sp"
                        android:textStyle="italic"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/badgesRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_card"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvUsername">

                        <!--Rated area-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_card"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/badgeRated"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                android:gravity="center"
                                android:text="Değerlendirme"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"></TextView>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!--Credit area-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_card"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/badgeCredit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                android:text="Credit"
                                android:gravity="center"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"></TextView>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--Alt kısım-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutProfileBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@color/antiFlashWhite"
                    android:padding="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayoutProfileTop">

                    <TextView
                        android:id="@+id/tvAboutConstant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="left"
                        android:text="@string/tvAboutConstant"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvUserbio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="man who chooses to enjoy a pleasure thaasure?"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvAboutConstant" />

                    <TextView
                        android:id="@+id/tvProfileInfoCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/selector_profile_textview"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:enabled="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="man who chooses to enjoy a pleasure that has
                        no annoying consequences, or one who avoids a pain that
                        produces no resultant pleasure?"
                        android:textColor="@color/White"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvUserbio" />

                    <LinearLayout
                        android:id="@+id/rowButtons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvProfileInfoCard">

                        <Button
                            android:id="@+id/btnAddTest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="12dp"
                            android:layout_weight="0.33"
                            android:background="@drawable/v_selector_btn_new_test"

                            android:drawableTop="@drawable/outline_add_white_36"
                            android:elevation="4dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:text="@string/action_btn_new_test"
                            android:textAllCaps="false"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/btnShareTest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="12dp"
                            android:layout_weight="0.33"
                            android:background="@drawable/selector_btn_share_test"
                            android:drawableTop="@drawable/outline_link_white_36"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:text="@string/action_btn_share_test"
                            android:textAllCaps="false"
                            app:layout_constraintEnd_toStartOf="@+id/shareTest"
                            app:layout_constraintStart_toEndOf="@+id/addTest"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/btnShareResult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginBottom="12dp"
                            android:layout_weight="0.33"
                            android:background="@drawable/selector_btn_share_result"
                            android:drawableTop="@drawable/baseline_share_white_36"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:text="@string/action_btn_share_results"
                            android:textAllCaps="false"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvSupporterConstant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="left"
                        android:text="@string/tvSupporter"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rowButtons" />


                    <FrameLayout
                        android:id="@+id/ProfileCardAd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/shape_card"
                        android:elevation="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvSupporterConstant">

                        <com.google.android.gms.ads.AdView
                            android:id="@+id/profileBannerAdd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:adSize="LARGE_BANNER"
                            app:adUnitId="@string/admob_profile_banner" />
                    </FrameLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</FrameLayout>