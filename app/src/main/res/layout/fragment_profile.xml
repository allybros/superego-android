<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:padding="8dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/simple_profile_photo"/>

            <TextView
                android:id="@+id/tvUsernameProfilPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/@username" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:src="@drawable/left_quote_16" />

                <TextView
                    android:id="@+id/tvUserInfoProfilPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="man who chooses to enjoy a pleasure that has no annoying consequences, or one who avoids a pain that produces no resultant pleasure?"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.beardedhen.androidbootstrap.BootstrapLabel
                    android:id="@+id/tvRatedProfilPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="TESTSCORE"
                    app:bootstrapBrand="success"
                    app:bootstrapHeading="h6" />

                <com.beardedhen.androidbootstrap.BootstrapProgressBar
                    android:id="@+id/progressBarProfilPage"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    app:animated="true"
                    app:bootstrapBrand="primary"
                    app:bootstrapMaxProgress="15"
                    app:striped="true" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:id="@+id/tvAppInformationProfilePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/textview_bg"
        android:elevation="15dp"
        android:padding="15dp"
        android:text="man who chooses to enjoy a pleasure that has no annoying consequences, or one who avoids a pain that produces no resultant pleasure?"
        app:bootstrapBrand="secondary"
        app:layout_constraintTop_toBottomOf="@+id/card_view"
        tools:layout_editor_absoluteX="5dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/addTest"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        app:backgroundTint="@color/buttonNewTestColor"
        app:icon="@drawable/outline_add_white_36"
        app:layout_constraintEnd_toStartOf="@+id/copyTestLink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAppInformationProfilePage" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/copyTestLink"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        app:backgroundTint="@color/buttonCopyColor"
        app:icon="@drawable/outline_link_white_36"
        app:layout_constraintEnd_toStartOf="@+id/shareTest"
        app:layout_constraintStart_toEndOf="@+id/addTest"
        app:layout_constraintTop_toBottomOf="@+id/tvAppInformationProfilePage" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/shareTest"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        app:backgroundTint="@color/buttonPublishColor"
        app:icon="@drawable/outline_publish_white_36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/copyTestLink"
        app:layout_constraintTop_toBottomOf="@+id/tvAppInformationProfilePage" />



</androidx.constraintlayout.widget.ConstraintLayout>