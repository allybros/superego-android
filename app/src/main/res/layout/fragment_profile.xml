<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="55dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">
            <!-- Profile Card View -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:elevation="15dp"
                android:padding="8dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.allybros.superego.util.CircledNetworkImageView
                            android:id="@+id/profile_image"
                            android:layout_width="96dp"
                            android:src="@drawable/simple_profile_photo"
                            android:elevation="50dp"
                            android:layout_height="96dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"/>
                        <!--                <ImageView
                                            android:id="@+id/profile_image"
                                            android:layout_width="96dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:layout_height="96dp"
                                            android:src="@drawable/simple_profile_photo" />-->
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvUsernameProfilPage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/comfortaa_light"
                        android:text="/@username" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="3dp"
                            android:src="@drawable/left_quote_16" />

                        <TextView
                            android:id="@+id/tvUserInfoProfilPage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comfortaa_light"
                            android:gravity="center"
                            android:text="man who chooses to enjoy a pleasure that has no annoying consequences, or one who avoids a pain that produces no resultant pleasure?"
                            android:textColor="#000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvRatedProfilPage"
                            android:layout_width="wrap_content"
                            android:textColor="@color/White"
                            android:background="@drawable/score_bg"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:elevation="5dp"
                            android:padding="5dp"
                            android:gravity="right"
                            android:fontFamily="@font/comfortaa_light"
                            android:text="TESTSCORE"/>

<!--
                        <com.vlad1m1r.lemniscate.funny.HeartProgressView
                            android:id="@+id/heart1"
                            android:visibility="invisible"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:duration="1000"
                            app:hasHole="false"
                            app:lineColor="@color/buttonPublishColor"
                            app:maxLineLength="0.8"
                            app:minLineLength="0.4"
                            app:sizeMultiplier="1"
                            app:strokeWidth="1dp"/>
-->

                        <ProgressBar
                            android:id="@+id/progressBarProfilPage"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="135dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:max="10" />
                        <!--if change max value, must change rate_limit value in /unit/api-->

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Text Info View -->
            <TextView
                android:id="@+id/tvAppInformationProfilePage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/comfortaa_light"
                android:background="@drawable/textview_bg"
                android:elevation="15dp"
                android:padding="15dp"
                android:gravity="center"
                android:text="man who chooses to enjoy a pleasure that has no annoying consequences, or one who avoids a pain that produces no resultant pleasure?"
                android:textColor="@color/White"
                />

            <!-- Tools -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addTest"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/comfortaa_light"

                app:backgroundTint="@color/buttonNewTestColor"
                app:icon="@drawable/outline_add_white_36"
                android:text="@string/add_test" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/copyTestLink"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:fontFamily="@font/comfortaa_light"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"

                android:text="@string/link_copy"
                app:backgroundTint="@color/buttonCopyColor"
                app:icon="@drawable/outline_link_white_36"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/shareTest"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/comfortaa_light"
                android:gravity="center"
                android:text="@string/shareTest"
                app:backgroundTint="@color/buttonPublishColor"
                app:icon="@drawable/outline_publish_white_36"
                />


        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>