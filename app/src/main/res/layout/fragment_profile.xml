<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragmentBackground"
    android:fillViewport="true"
    android:scrollbars="vertical">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/profileSwipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/White">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutProfileContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/White"
                android:paddingBottom="10dp">



                <!--Renkli kısım-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutProfileTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profile_top_bg"
                    android:elevation="10dp"
                    android:padding="125dp"
                    android:translationZ="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                </androidx.constraintlayout.widget.ConstraintLayout>


                <ImageView
                    android:id="@+id/btnSettings"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ic_baseline_settings_36"
                    android:translationZ="12dp"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayoutProfileTop"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayoutProfileTop" />



                <!--Profil Card-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/shape_card"
                    android:elevation="4dp"
                    android:translationZ="7dp"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintStart_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/constraintLayoutProfileContainer">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="83dp"
                        android:text="\@username"
                        android:textColor="@color/Black"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="6dp"
                        android:src="@drawable/ic_quote"
                        app:layout_constraintEnd_toStartOf="@+id/tvUserbio"
                        app:layout_constraintTop_toBottomOf="@+id/tvUsername"></ImageView>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvUserbio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="10dp"
                        android:text="Kendinizi tanıtan bir yazı yazın."
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvUsername"></androidx.appcompat.widget.AppCompatTextView>

                    <!--Cards area-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_card"
                        android:weightSum="2"
                        app:layout_constraintTop_toBottomOf="@+id/tvUserbio">

                        <!--Rated area-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="0.2dp"
                            android:layout_weight="1"
                            android:background="@drawable/mini_card_bg"
                            android:gravity="center"
                            android:orientation="vertical">

                            <!--Divider-->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#E0E0E0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                            <!--Divider-->
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#E0E0E0"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <TextView
                                android:id="@+id/badgeRated"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="10"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@+id/textView8"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"></TextView>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="4dp"
                                android:layout_marginBottom="8dp"
                                android:src="@drawable/ic_baseline_done_24"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/textView8"
                                app:tint="@color/green3"></ImageView>

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:text="Değerlendirme"
                                android:textColor="@color/green3"
                                android:textSize="12dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"></TextView>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!--Credit area-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:background="@drawable/mini_card_bg"
                            android:gravity="center"
                            android:orientation="vertical">

                            <!--Divider-->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#E0E0E0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                            <!--Divider-->
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#E0E0E0"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:id="@+id/badgeCredit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="10"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@+id/textView5"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"></TextView>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="4dp"
                                android:layout_marginBottom="8dp"
                                android:src="@drawable/ic_chamleon"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/textView5"
                                app:tint="@color/purple"></ImageView>

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:text="Credit"
                                android:textColor="@color/purple"
                                android:textSize="12dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"></TextView>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--Profil Fotografı-->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_avatar"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="70dp"
                    android:elevation="4dp"
                    android:src="@drawable/default_avatar"
                    android:translationZ="10dp"
                    app:civ_border_width="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!--Alt kısım-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutProfileBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="115dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/White"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayoutProfileTop">

                    <LinearLayout
                        android:id="@+id/rowButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="18dp"
                        android:weightSum="3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <Button
                            android:id="@+id/btnAddTest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/v_selector_btn_new_test"
                            android:drawableTop="@drawable/outline_add_white_36"
                            android:elevation="7dp"
                            android:outlineProvider="bounds"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:stateListAnimator="@null"
                            android:text="@string/action_btn_new_test"
                            android:textAllCaps="false"
                            android:translationZ="2dp" />


                        <Button
                            android:id="@+id/btnShareTest"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/selector_btn_share_test"
                            android:drawableTop="@drawable/outline_link_white_36"
                            android:elevation="7dp"
                            android:outlineProvider="bounds"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:stateListAnimator="@null"
                            android:text="@string/action_btn_share_test"
                            android:textAllCaps="false"
                            android:translationZ="2dp" />

                        <Button
                            android:id="@+id/btnShareResult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_btn_share_result"
                            android:drawableTop="@drawable/baseline_share_white_36"
                            android:elevation="7dp"
                            android:outlineProvider="bounds"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:stateListAnimator="@null"
                            android:text="@string/action_btn_share_results"
                            android:textAllCaps="false"
                            android:translationZ="2dp" />
                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/clInfoCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="18dp"
                        android:elevation="4dp"
                        app:cardCornerRadius="11dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rowButton">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/infocard_bg"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/tvProfileInfoCard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="14dp"
                                android:layout_marginTop="22dp"
                                android:layout_marginEnd="14dp"
                                android:layout_marginBottom="44dp"
                                android:clickable="true"
                                android:elevation="4dp"
                                android:enabled="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:lineHeight="25dp"
                                android:text="Arkadaşlarının seni değerlendirmesi için kişilik testini arkadaşların ile paylaş."
                                android:textColor="@color/White"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/shape_info_button"
                                android:paddingHorizontal="50dp"
                                android:text="Testi Paylaş"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tvProfileInfoCard"></Button>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvSupporterConstant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="left"
                        android:text="@string/tvSupporter"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/clInfoCard" />


                    <FrameLayout
                        android:id="@+id/ProfileCardAd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/shape_card"
                        android:elevation="4dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvSupporterConstant">

                        <com.google.android.gms.ads.AdView
                            android:id="@+id/profileBannerAdd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:adSize="LARGE_BANNER"
                            app:adUnitId="@string/admob_profile_banner" />
                    </FrameLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</FrameLayout>