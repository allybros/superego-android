<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvSearchUserBio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="userbio"
        android:textColor="@color/deepBlue"
        android:fontFamily="@font/noto_sans"
        android:textFontWeight="400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nivSearchUserAvatar"
        app:layout_constraintTop_toBottomOf="@+id/tvSearchUsername" />

    <TextView
        android:id="@+id/tvSearchUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/hint_searchbar_username"
        android:textColor="@color/deepBlue"
        android:fontFamily="@font/noto_sans"
        android:textFontWeight="600"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/nivSearchUserAvatar"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nivSearchUserAvatar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>