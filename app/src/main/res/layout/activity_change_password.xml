<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChangePasswordActivity"
    android:background="@color/fragmentBackground">

    <!-- Password change form -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/card_shape"
        android:padding="12dp"
        android:elevation="4dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutOldPassword"
            style="@style/SegoInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_current_password"
            app:endIconMode="password_toggle"
            app:hintTextColor="@color/materialPurple"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etOldPassword"
                style="@style/SegoEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutNewPassword"
            style="@style/SegoInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/prompt_new_password"
            app:endIconMode="password_toggle"
            app:layout_constraintTop_toBottomOf="@id/layoutOldPassword"
            tools:layout_editor_absoluteX="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNewPassword"
                style="@style/SegoEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutNewPasswordAgain"
            style="@style/SegoInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/new_password_again"
            app:endIconMode="password_toggle"
            app:layout_constraintTop_toBottomOf="@id/layoutNewPassword"
            tools:layout_editor_absoluteX="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNewPasswordAgain"
                style="@style/SegoEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btChangePassword"
            style="@style/SegoBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/action_ok"
            app:layout_constraintTop_toBottomOf="@+id/layoutNewPasswordAgain"
            tools:layout_editor_absoluteX="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>