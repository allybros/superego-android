<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/White</item>
        <item name="android:actionBarSize">52dp</item>
        <item name="colorControlActivated">@color/segoPurple600</item>
    </style>

    <style name="SegoAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:dialogCornerRadius" tools:targetApi="p">12dp</item>
        <item name="dialogPreferredPadding">16dp</item>
    </style>

    <style name="SegoCard" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/statusbarPurple</item>
        <item name="colorControlActivated">@color/segoPurple600</item>
    </style>

    <style name="UserPage.theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/White</item>
        <item name="android:actionBarSize">52dp</item>
        <item name="colorControlActivated">@color/segoPurple600</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light" >
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.TransparentBackground" parent="Theme.MaterialComponents.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:action">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/White</item>
        <item name="android:actionBarSize">52dp</item>
        <item name="colorControlActivated">@color/segoPurple600</item>
    </style>

    <style name="SegoInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/materialDeepPurple</item>
        <item name="android:textColor">@color/materialDeepPurple</item>"
        <item name="hintTextColor">@color/materialDeepPurple</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="SegoEditText">
        <item name="android:textColor">@color/Gray</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="SegoBtn" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="backgroundTint">@color/segoPurple600</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="SegoAlertBtnPrimary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="backgroundTint">@color/segoPurple100</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="SegoAlertBtn" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="backgroundTint">@color/segoGray100</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textColor">@color/segoPurple100</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="SegoProgressView" parent="Widget.MaterialProgressBar.ProgressBar.Horizontal">
        <item name="progressBarPadding">0dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="mpb_useIntrinsicPadding">false</item>
    </style>

    <style name="Sego.BottomNavigaton" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/Sego.BottomNavigaton.TextApperance.Active</item>
        <item name="itemTextAppearanceInactive">@style/Sego.BottomNavigaton.TextApperance.Inactive</item>
    </style>

    <style name="Sego.BottomNavigaton.TextApperance.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/noto_sans_bold</item>
    </style>

    <style name="Sego.BottomNavigaton.TextApperance.Inactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/noto_sans</item>
    </style>

    <style name="BubbleAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_anim</item>
        <item name="android:windowExitAnimation">@anim/fade_out_anim</item>
    </style>

</resources>
